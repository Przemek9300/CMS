@model IEnumerable<CMS.ViewModels.PostViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="container">
 
    <div class="row">

        <!-- Blog Entries Column -->
        <div class="col-md-8">

            <h1 class="my-4">
              AKTUALNOŚĆI
            </h1>
            <hr />

            <!-- Blog Post -->
            @foreach(var item in Model) { 
            <div class="card mb-4">
                <div class="icon-wrapper">
                    <span class="fa-stack fa-lg">
                        <i class="fa fa-circle-thin fa-stack-2x"></i>
                        <i class="fa fa-hashtag" aria-hidden="true"></i>

                    </span>
                </div>
                <div class="card-body">
                    <article>
                        <h2 class="card-title ">@item.Title.ToUpper()</h2>
                        <img class="card-img-top" src="@item.ImageUrl" alt="Card image cap">
                        <blockquote>@item.Description</blockquote>
                    </article>

                </div>
                <div class="card-footer text-muted">
                    
                </div>
                @Html.ActionLink("Czytaj dalej...", "Details", new { id = @item.Id }, new { @class= "btn btn-default" }) 
                @if (User.IsInRole("Admin"))
                {
                    @Html.ActionLink("Edytuj Post", "Edit", new { id = @item.Id }, new { @class = "btn btn-default" })
                    @Html.ActionLink("Usuń Post", "Delete", new { id = @item.Id }, new { @class = "btn btn-default" })
                }
                <div class="icon-wrapper">
                    <span class="fa-stack fa-lg">
                        <i class="fa fa-circle-thin fa-stack-2x"></i>
                        <i class="fa fa-user fa-stack-1x"></i>
                    </span>
                    @item.Author
                    <span class="fa-stack fa-lg">
                        <i class="fa fa-circle-thin fa-stack-2x"></i>
                        <i class="fa fa-clock-o fa-stack-1x"></i>
                    </span>
                    @item.PublishAt.ToString("dd MMMM yy")
                    <span class="fa-stack fa-lg">
                        <i class="fa fa-circle-thin fa-stack-2x"></i>
                        <i class="fa fa-comment-o fa-stack-1x"></i>
                        
                    </span>
                    0
                    @foreach(var tag in item.Tags)
                    {
                        <p>@tag.Name</p>
                    }
                </div>
            </div>
            <hr />
            }
            


            <!-- Pagination -->
            <ul class="pagination justify-content-center mb-4">
                <li class="page-item">
                    <a class="page-link" href="#">&larr; Older</a>
                </li>
                <li class="page-item disabled">
                    <a class="page-link" href="#">Newer &rarr;</a>
                </li>
            </ul>

        </div>

        <!-- Sidebar Widgets Column -->
        <div class="col-md-4">

            <!-- Search Widget -->
            <div class="card my-4">
                <h5 class="card-header">Search</h5>
                <div class="card-body">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search for...">
                        <span class="input-group-btn">
                            <button class="btn btn-secondary" type="button">Go!</button>
                        </span>
                    </div>
                </div>
            </div>

            <!-- Categories Widget -->
            <div class="card my-4">
                <h5 class="card-header">Categories</h5>
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-6">
                            <ul class="list-unstyled mb-0">
                                <li>
                                    <a href="#">Web Design</a>
                                </li>
                                <li>
                                    <a href="#">HTML</a>
                                </li>
                                <li>
                                    <a href="#">Freebies</a>
                                </li>
                            </ul>
                        </div>
                        <div class="col-lg-6">
                            <ul class="list-unstyled mb-0">
                                <li>
                                    <a href="#">JavaScript</a>
                                </li>
                                <li>
                                    <a href="#">CSS</a>
                                </li>
                                <li>
                                    <a href="#">Tutorials</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Side Widget -->
            <div class="card my-4">
                <h5 class="card-header">Side Widget</h5>
                <div class="card-body">
                    You can put anything you want inside of these side widgets. They are easy to use, and feature the new Bootstrap 4 card containers!
                </div>
            </div>

        </div>

    </div>
    <!-- /.row -->

</div>
<!-- /.container -->
<!-- Footer -->
