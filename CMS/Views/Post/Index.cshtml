
@model PagedList.IPagedList<CMS.ViewModels.PostViewModel>
@using PagedList.Mvc;
@using CMS.Models
<link href="//cdnjs.cloudflare.com/ajax/libs/jqueryui/1.11.2/jquery-ui.css" rel="stylesheet" />

<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
<link href="~/Content/font-awesome.min.css" rel="stylesheet" />
<link href="~/Content/tagsinput.css" rel="stylesheet" />



<p>
	@Html.ActionLink("Create New", "Create")
</p>
<div class="container">

	<div class="row">

		<!-- Blog Entries Column -->
		<div class="col-md-8">

			<h1 class="my-4">
				Blog
			</h1>
			<hr />

			<!-- Blog Post -->
			@foreach (var item in Model)
			{
				<div>
					<span class="fa-stack fa-lg"></span>


					@foreach (var tag in item.Tags)
					{
						@Html.ActionLink("#"+tag.Name, "Index", "Tag", new { tag = tag.Name }, new { @class = "btn btn-light btn-outline-dark" })
					}
				</div>
				<div class="card mb-4">



					<div class="card-body">
						<article>
							<h2 class="card-title ">@item.Title.ToUpper()</h2>
							<img class="card-img-top" src="@item.ImageUrl" alt="Card image cap">
							<blockquote>@item.Description</blockquote>
						</article>
						@Html.ActionLink("Czytaj dalej...", "Details", new { id = @item.Id }, new { @class = "btn btn-default btn-outline-dark btn-round-lg" })
					</div>

					
					@if (User.IsInRole("Admin"))
					{
						@Html.ActionLink("Edytuj Post", "Edit", new { id = @item.Id }, new { @class = "btn btn-default btn-outline-dark btn-round-lg" })


						@Html.ActionLink("Usuń Post", "Delete", new { id = @item.Id }, new { @class = "btn btn-default btn-outline-dark btn-round-lg" })
				   }
					<div class="icon-wrapper">
						<span class="fa-stack fa-lg">
							
							<i class="fa fa-user fa-stack-1x"></i>
						</span>
						@item.Author
						<span class="fa-stack fa-lg">
							
							<i class="fa fa-clock-o fa-stack-1x"></i>
						</span>
						@item.PublishAt.ToString("dd MMMM yy")
						<span class="fa-stack fa-lg">
							
							<i class="fa fa-comment-o fa-stack-1x"></i>

						</span>
						0

					</div>
				</div>
				<hr />
			}



			<!-- Pagination -->
			<ul class="pagination justify-content-center mb-4">
				<li class="page-item disabled">
					@Html.PagedListPager(Model, page => Url.Action("Index",
					new { page}))
				</li>
			</ul>



		</div>

		<!-- Sidebar Widgets Column -->
		<div class="col-md-4">

			<!-- Search Widget -->
			<div class="card my-4">
				<h5 class="card-header">Search</h5>
				<div class="card-body">
					<div class="input-group ui-widget">
						<input type="text" class="form-control autocomplete " placeholder="Search tags with '#'" id="autocomplete">
						<span class="input-group-btn">
							<button class="btn btn-secondary searchButton" id="searchButton" type="button">Go!</button>
						</span>
					</div>
				</div>
			</div>

			<!-- Categories Widget -->
			<div class="card my-4">
				<h5 class="card-header">Categories</h5>
				<div class="card-body">
					<div class="row">
						
						<div class="col-lg-6">
							<ul class="list-unstyled mb-0">

								
								@foreach (var item in ViewBag.tag1 as List<Tag>)
								{
								<li>
									@Html.ActionLink(item.Name+"("+item.Posts.Count+")","Index","Tag",new {tag= item.Name},null)
								</li>
								}
								</ul>
						</div>
						<div class="col-lg-6">
							<ul class="list-unstyled mb-0">
								@foreach (var item in ViewBag.tag2 as List<Tag>)
								{
									<li>
										@Html.ActionLink(item.Name + "(" + item.Posts.Count + ")", "Index", "Tag", new { tag = item.Name }, null)
									</li>
								}
							</ul>
							
						</div>
						
					</div>
				</div>
			</div>

			<!-- Side Widget -->
			<div class="card my-4">
				<h5 class="card-header">Side Widget</h5>
				<div class="card-body">
					You can put anything you want inside of these side widgets. They are easy to use, and feature the new Bootstrap 4 card containers!
				</div>
			</div>

		</div>

	</div>
	<!-- /.row -->

</div>
<!-- /.container -->
<!-- Footer -->

<section script>
	<script>


		$("#autocomplete").autocomplete({
			classes: {
				"ui-menu": "highlight"
			},
			source: (request, response) => {
				$.ajax({
					url: "@Url.Action("Autocomplete")",
					type: "POST",
					dataType: "json",
					contentType: "application/json; charset=utf-8",
					data: JSON.stringify({ 'query': request.term }),
					success: function (data) {
						response($.map(data, function (item) {
							return { label: item.label, value: item.value };
						}))

					},
					error: (error) => {
						console.log(JSON.stringify(error));
					}


				})
			},
			minLength: 3,
			select: (e, ui) => {
				window.location.href = ui.item.value
			}


			}
		)
		$("#searchButton").click(() => {

			let value = $("#autocomplete").val();
			alert(value);
			if (value.startsWith('#')) {
				value = value.split("#")[1]
				window.location.href = '@Url.Action("Index", "Tag")?query=' + value;
			}
			else {

				window.location.href = '@Url.Action("Index", "Post")?query=' + value;
			}






		}



		)





	</script>
</section>
