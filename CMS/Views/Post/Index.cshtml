
@model PagedList.IPagedList<CMS.ViewModels.PostViewModel>
@using PagedList.Mvc;

@{
	ViewBag.Title = "Index";
}


<link href="~/Content/tagsinput.css" rel="stylesheet" />



<p>
	@Html.ActionLink("Create New", "Create")
</p>
<div class="container">

	<div class="row">

		<!-- Blog Entries Column -->
		<div class="col-md-8">

			<h1 class="my-4">
				AKTUALNOŚĆI
			</h1>
			<hr />

			<!-- Blog Post -->
			@foreach (var item in Model)
			{
				<div class="card mb-4">
					<div class="icon-wrapper">

						<span class="entry-date">
							<i class="far fa-calendar-al"></i>

							<a href="http://piotrgankiewicz.com/2017/12/30/2017-summary/" rel="bookmark">
								<time class="entry-date" datetime="2012-02-13T04:34:10+00:00">30 December 2017</time>
							</a>
						</span>

						<span class="comment-link">
							<i class="pw-icon-comment"></i>

							<a href="http://piotrgankiewicz.com/2017/12/30/2017-summary/#comments">10 Comments</a>
						</span>

						<span class="byline">
							<span class="author vcard">
								<i class="pw-icon-user-outline"></i>

								<a class="url fn n" href="http://piotrgankiewicz.com/author/piotr-gankiewicz/" rel="author">Piotr Gankiewicz</a>
							</span>
						</span>

						<span class="read-time"><i class="pw-icon-bookmark-empty-1"></i><span class="eta">5 min</span> read</span>


					</div>
					<div class="card-body">
						<article>
							<h2 class="card-title ">@item.Title.ToUpper()</h2>
							<img class="card-img-top" src="@item.ImageUrl" alt="Card image cap">
							<blockquote>@item.Description</blockquote>
						</article>

					</div>
					<div class="card-footer text-muted">

					</div>
					@Html.ActionLink("Czytaj dalej...", "Details", new { id = @item.Id }, new { @class = "btn btn-default" })
					@if (User.IsInRole("Admin"))
					{
						@Html.ActionLink("Edytuj Post", "Edit", new { id = @item.Id }, new { @class = "btn btn-default" })
						@Html.ActionLink("Usuń Post", "Delete", new { id = @item.Id }, new { @class = "btn btn-default" })
					}
					<div class="icon-wrapper">
						<span class="fa-stack fa-lg">
							<i class="fa fa-circle-thin fa-stack-2x"></i>
							<i class="fa fa-user fa-stack-1x"></i>
						</span>
						@item.Author
						<span class="fa-stack fa-lg">
							<i class="fa fa-circle-thin fa-stack-2x"></i>
							<i class="fa fa-clock-o fa-stack-1x"></i>
						</span>
						@item.PublishAt.ToString("dd MMMM yy")
						<span class="fa-stack fa-lg">
							<i class="fa fa-circle-thin fa-stack-2x"></i>
							<i class="fa fa-comment-o fa-stack-1x"></i>

						</span>
						0
						@foreach (var tag in item.Tags)
						{
							@Html.ActionLink(tag.Name, "Index", "Tag", new { tag = tag.Name }, new { @class = "btn btn - light" })
						}
					</div>
				</div>
				<hr />
			}



			<!-- Pagination -->
			<ul class="pagination justify-content-center mb-4">
				<li class="page-item disabled">
					@Html.PagedListPager(Model, page => Url.Action("Index",
					new { page}))
				</li>
			</ul>



		</div>

		<!-- Sidebar Widgets Column -->
		<div class="col-md-4">

			<!-- Search Widget -->
			<div class="card my-4">
				<h5 class="card-header">Search</h5>
				<div class="card-body">
					<div class="input-group">
						<input type="text" class="form-control" placeholder="Search for...">
						<span class="input-group-btn">
							<button class="btn btn-secondary" type="button">Go!</button>
						</span>
					</div>
				</div>
			</div>

			<!-- Categories Widget -->
			<div class="card my-4">
				<h5 class="card-header">Categories</h5>
				<div class="card-body">
					<div class="row">
						<div class="col-lg-6">
							<ul class="list-unstyled mb-0">
								<li>
									<a href="#">Web Design</a>
								</li>
								<li>
									<a href="#">HTML</a>
								</li>
								<li>
									<a href="#">Freebies</a>
								</li>
							</ul>
						</div>
						<div class="col-lg-6">
							<ul class="list-unstyled mb-0">
								<li>
									<a href="#">JavaScript</a>
								</li>
								<li>
									<a href="#">CSS</a>
								</li>
								<li>
									<a href="#">Tutorials</a>
								</li>
							</ul>
						</div>
					</div>
				</div>
			</div>

			<!-- Side Widget -->
			<div class="card my-4">
				<h5 class="card-header">Side Widget</h5>
				<div class="card-body">
					You can put anything you want inside of these side widgets. They are easy to use, and feature the new Bootstrap 4 card containers!
				</div>
			</div>

		</div>

	</div>
	<!-- /.row -->

</div>
<!-- /.container -->
<!-- Footer -->
